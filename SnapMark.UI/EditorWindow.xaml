<Window x:Class="SnapMark.UI.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="LightGray">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" Padding="10">
                    <Button x:Name="HandToolButton" Content="Hand" Margin="5" Click="HandToolButton_Click"/>
                    <Button x:Name="ArrowToolButton" Content="Arrow" Margin="5" Click="ArrowToolButton_Click"/>
                    <Button x:Name="RectangleToolButton" Content="Rectangle" Margin="5" Click="RectangleToolButton_Click"/>
                    <Button x:Name="LineToolButton" Content="Line" Margin="5" Click="LineToolButton_Click"/>
                    <Button x:Name="TextToolButton" Content="Text" Margin="5" Click="TextToolButton_Click"/>
                    <Button x:Name="CopyButton" Content="Copy" Margin="5" Click="CopyButton_Click"/>
                    <Button x:Name="SaveButton" Content="Save" Margin="5" Click="SaveButton_Click"/>
                </StackPanel>
                
                <StackPanel x:Name="PropertyPanel" Grid.Column="1" Orientation="Horizontal" Padding="10" Visibility="Collapsed">
                    <TextBlock Text="Color:" VerticalAlignment="Center" Margin="5,0"/>
                    <Button x:Name="ColorPickerButton" Width="40" Height="30" Margin="5,0" Click="ColorPickerButton_Click">
                        <Button.Background>
                            <SolidColorBrush x:Name="ColorSwatch" Color="Red"/>
                        </Button.Background>
                    </Button>
                    <TextBlock Text="Width:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                    <Slider x:Name="StrokeWidthSlider" Width="100" Minimum="1" Maximum="20" Value="2" ValueChanged="StrokeWidthSlider_ValueChanged" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBlock x:Name="StrokeWidthText" Text="2" VerticalAlignment="Center" Margin="5,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer x:Name="ImageScrollViewer" Grid.Row="1" ZoomMode="Enabled" MinZoomFactor="0.1" MaxZoomFactor="5.0">
            <Grid>
                <Canvas x:Name="EditorCanvas" Background="Transparent">
                    <Image x:Name="BackgroundImage" Stretch="None"/>
                </Canvas>
                <Canvas x:Name="AnnotationCanvas" Background="Transparent" 
                        PointerPressed="AnnotationCanvas_PointerPressed"
                        PointerMoved="AnnotationCanvas_PointerMoved"
                        PointerReleased="AnnotationCanvas_PointerReleased"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
